name: Docker CI

on:
  workflow_dispatch:

env:
  DOCKERHUB_USER: amezian9
  IMAGE_NAME: calculator-app-finished

jobs:
  docker:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Debug secrets
        run: |
          echo "Username=${{ secrets.DOCKERHUB_USERNAME }}"
          echo "Token length=$(echo -n '${{ secrets.DOCKERHUB_TOKEN }}' | wc -c)"

      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      - name: Set tags
        id: meta
        run: |
          if [[ "${GITHUB_REF_TYPE}" == "tag" ]]; then
            echo "tags=${DOCKERHUB_USER}/${IMAGE_NAME}:${GITHUB_REF_NAME}" >> "$GITHUB_OUTPUT"
          else
            echo "tags=${DOCKERHUB_USER}/${IMAGE_NAME}:latest" >> "$GITHUB_OUTPUT"
          fi

      - name: Build and Push Docker image
        uses: docker/build-push-action@v6
        with:
          push: true
          tags: ${{ steps.meta.outputs.tags }}

      - name: Scan image for CVEs
        uses: docker/scout-action@v1
        with:
          command: cves
          image: ${{ steps.meta.outputs.tags }}
